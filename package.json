{
  "name": "react-cicd",
  "version": "1.0.0",
  "description": "This repo is to test out a simply CI/CD pipeline for a React app using Github Actions",
  "main": "index.js",
  "scripts": {
    "dev": "webpack serve --config ./webpack.dev.js",
    "docker:dev:build": "docker build --target development -t react-cicd .",
    "docker:dev:start": "docker run -p 8080:8080 -v ${PWD}:/app -v /app/node_modules -d --name react-cicd react-cicd",
    "docker:stop": "docker stop react-cicd"
  },
